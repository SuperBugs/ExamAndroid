<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_bottom_gong_gong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:scaleType="fitXY"
            android:src="@drawable/gong_gong" />

        <ImageView
            android:id="@+id/iv_home_bottom_dao_lu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:scaleType="fitXY"
            android:src="@drawable/dao_lu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_bottom_jiao_tong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:scaleType="fitXY"
            android:src="@drawable/jiao_tong" />

        <ImageView
            android:id="@+id/iv_home_bottom_qiao_liang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:scaleType="fitXY"
            android:src="@drawable/qiao_liang" />
    </LinearLayout>
</LinearLayout>
