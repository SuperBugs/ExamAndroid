<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <www.cjkj.com.baiyue.view.MyViewPager
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:persistentDrawingCache="animation">

                </www.cjkj.com.baiyue.view.MyViewPager>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vp_point_size"
                    android:layout_alignBottom="@id/vp_home"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/point_group"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/vp_point_size"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_padding"
                android:background="@color/middle_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/min_padding"
                    android:background="@color/little_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_home_center"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="3dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_home_center_gong_gong"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/iv_home_center_one_bg"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/iv_home_center_dao_lu"
                            android:layout_width="@dimen/main_tv_youhui_iv"
                            android:layout_height="@dimen/main_tv_youhui_iv"
                            android:background="@drawable/iv_home_center_two_bg"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/iv_home_center_jiao_tong"
                            android:layout_width="@dimen/main_tv_youhui_iv"
                            android:layout_height="@dimen/main_tv_youhui_iv"
                            android:background="@drawable/iv_home_center_three_bg"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/iv_home_center_qiao_liang"
                            android:layout_width="@dimen/main_tv_youhui_iv"
                            android:layout_height="@dimen/main_tv_youhui_iv"
                            android:background="@drawable/iv_home_center_four_bg"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_home_center_gong_gong"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/tv_yuhui1"
                            android:textColor="@color/height_gray"
                            android:textSize="@dimen/yu_hui_quan_text_size" />


                        <TextView
                            android:id="@+id/tv_home_center_dao_lu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/tv_yuhui2"
                            android:textColor="@color/height_gray"
                            android:textSize="@dimen/yu_hui_quan_text_size" />


                        <TextView
                            android:id="@+id/tv_home_center_jiao_tong"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/tv_yuhui3"
                            android:textColor="@color/height_gray"
                            android:textSize="@dimen/yu_hui_quan_text_size" />


                        <TextView
                            android:id="@+id/tv_home_center_qiao_liang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/tv_yuhui4"
                            android:textColor="@color/height_gray"
                            android:textSize="@dimen/yu_hui_quan_text_size" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/min_padding"
                    android:background="@color/middle_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.8"
                    android:background="@color/little_white"
                    android:gravity="center"
                    android:text="@string/main_tv_four"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/min_padding"
                    android:background="@color/middle_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_bottom_gong_gong"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:scaleType="fitXY"
                    android:src="@drawable/gong_gong" />

                <ImageView
                    android:id="@+id/iv_home_bottom_dao_lu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:scaleType="fitXY"
                    android:src="@drawable/dao_lu" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_bottom_jiao_tong"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:scaleType="fitXY"
                    android:src="@drawable/jiao_tong" />

                <ImageView
                    android:id="@+id/iv_home_bottom_qiao_liang"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:scaleType="fitXY"
                    android:src="@drawable/qiao_liang" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
